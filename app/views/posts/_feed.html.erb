
<div class="column">
<h2 class="title is-2">Posts</h2>
<% @posts.each do |post| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <div class="content">
          <figure class="image is-64x64">
            <%= gravatar_image_tag(post.user.email, size:64, alt: post.user.name) %>
          </figure>
        </div>
      </div>

      <div class="media-content">
        <div class="content">
        
          <% if user_signed_in? %>
          <strong><%= post.user.name %></strong> <small><%= post.user.username %></small>
          </br>
          </br>
          <% end %>
        
      
          <p><%= post.post %></p>
        
          <% if user_signed_in? && current_user.id == post.user_id %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to post, class: "level-item" do %>
                  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to edit_post_path(post), class: "level-item" do %>
                  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?" } do %>
                  <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <% end %>
              </div>
            </nav>
          <% end %>

        </div>
      </div>
    </article>
  </div>

<% end %>

</div>