<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>  
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <nav class="navbar">
  <div class="navbar-brand">
    <%= link_to root_path, class: "navbar-item" do%>
      <h1 class="title is-5">Members Only!</h2>
    <% end %>
  </div>

  <div id="navbarExample" class="navbar-menu">
    <div class="navbar-end">
      <div class="navbar-item">
        <div class="field is-grouped">

          <% if user_signed_in? %>
            <p class="control">
              <%= link_to 'New Post', new_post_path, class: "button is-info is-inverted" %>
            </p>

            <p>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "button" %>
            </p>
          <% else %>
            <p>
              <%= link_to "Sign Up", new_user_session_path, class: "button is-info" %>
            </p>

            <p>
              <%= link_to "Login", new_user_session_path, class: "button" %>
            </p>
          <% end %>
            
        
        </div>
      </div>
    </div>
  </div>

</nav>


    <%= yield %>
  </body>
</html>
